@model CMCS.Mvc.Models.Lecturer
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create New Lecturer";
}

<h2>Create New Lecturer</h2>

<section class="card">
    <form action="/Lecturers/Create" method="post" class="form-grid">
        @Html.AntiForgeryToken()

        <div>
            <label for="Name">Name *</label>
            <input type="text" id="Name" name="Name" class="form-control" required
                   value="@(Model?.Name ?? "")" />
        </div>

        <div>
            <label for="Email">Email *</label>
            <input type="email" id="Email" name="Email" class="form-control" required
                   value="@(Model?.Email ?? "")" />
        </div>

        <div>
            <label for="Department">Department *</label>
            <input type="text" id="Department" name="Department" class="form-control" required
                   value="@(Model?.Department ?? "")" />
        </div>

        <div>
            <label for="Phone">Phone *</label>
            <input type="text" id="Phone" name="Phone" class="form-control" required
                   value="@(Model?.Phone ?? "")" />
        </div>

        <div class="button-row">
            <button type="submit" class="btn-primary">Create Lecturer</button>
            <a href="/Lecturers" class="btn-secondary">Cancel</a>
        </div>
    </form>
</section>